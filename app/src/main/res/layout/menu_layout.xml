<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/menu_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/menu_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/menu_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9fece9e9">

        <ImageView
            android:src="@drawable/news_512"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_above="@id/menu_list_root"/>
    <LinearLayout
        android:id="@+id/menu_list_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:padding="20dp">


    <Button
        android:id="@+id/btn_nav_news"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/menu_button"
        android:text="@string/hi_menu_news"/>

    <Button
        android:id="@+id/btn_nav_about"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/menu_button"
        android:text="@string/hi_menu_about"/>

        <Button
            android:id="@+id/btn_nav_privacy"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/menu_button"
            android:text="@string/hi_menu_privacy"/>
    </LinearLayout>



    </RelativeLayout>
</FrameLayout>