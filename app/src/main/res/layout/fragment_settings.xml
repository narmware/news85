<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.narmware.realpic.fragments.SettingsFragment">

   <RelativeLayout
       android:id="@+id/rltv_user"
       android:padding="10dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <TextView
          android:layout_centerInParent="true"
          android:id="@+id/txt_user_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

   </RelativeLayout>

   <LinearLayout
       android:id="@+id/lin_horizontal"
       android:orientation="vertical"
       android:layout_below="@+id/rltv_user"
       android:layout_width="match_parent"
       android:background="@color/grey_200"
       android:layout_height="1dp"/>


   <LinearLayout
       android:layout_below="@+id/lin_horizontal"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


      <ImageView
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_gravity="center"
          android:src="@drawable/news_512"/>
   <TextView
       android:id="@+id/txt_about"
       android:layout_marginTop="20dp"
       android:foreground="?android:attr/selectableItemBackground"
       android:layout_centerInParent="true"
       android:padding="10dp"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"
       android:drawableLeft="@drawable/ic_info"
       android:drawablePadding="15dp"
       android:gravity="center_vertical"
       android:background="@drawable/button_bg_single_line"
       android:text="About Us"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

   <TextView
       android:id="@+id/txt_privacy"
       android:foreground="?android:attr/selectableItemBackground"
       android:layout_centerInParent="true"
       android:padding="10dp"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"
       android:drawableLeft="@drawable/ic_privacy"
       android:drawablePadding="15dp"
       android:gravity="center_vertical"
       android:background="@drawable/button_bg_single_line"
       android:text="Privacy Policy"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
   </LinearLayout>
</RelativeLayout>
